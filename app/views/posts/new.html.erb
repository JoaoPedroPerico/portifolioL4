<%= turbo_frame_tag "post-form" do %>
  <div class="text-center text-3xl font-bold">New post form</div>
    <div class="m-5">
      <%= form_with model: @post, data: { controller: "post", action: "turbo:submit-end->post#reset"} do |f| %>
        <div>
          <%= f.label :image, class: "mt-5 block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.file_field :imagem %>
        </div>
        <div>
          <%= f.label :body, class: "mt-5 block text-sm font-medium leading-6 text-gray-900" %>
          <%= f.text_field :body, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6" %>
        </div>
        <div class="mx-60">
          <%= f.submit :send, class: "mt-5 flex w-full justify-center rounded-md bg-teal-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600" %>
        </div>
      <% end %>
    </div>

  <%= link_to "Close new post form", posts_path,  class: "bg-teal-500 hover:bg-teal-400 text-white font-bold py-2 px-4 border-b-4 border-teal-700 hover:border-teal-500 rounded"%>
<% end %>



